---
interface Props {
	href: string;
    alt:string;
    src: string;
	title: string;
	body: string;
    
    gradient: string;
}

const { href, title, body ,alt ,src,gradient} = Astro.props;

import Bagde from './Bagde.astro';
---

<li class="link-card">
    <a href={href} class="card" style={`--card-gradient: ${gradient}`}>
        <img class="card__image" src={src} alt={alt} />
        <div class="card__content">
            <h2 class="card__title">{title}</h2>
            <p class="card__text">
            {body}
            </p>
            
        </div>
    </a>
</li>

<style>
.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: var(--color-ligth);
		background-image: none;
		background-size: 400%;
		border-radius: 1rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px var(--color-grey);
	}    


.card {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 1rem;
		color: var(--color-light);
		background-color: var(--color-ligth);
		opacity: 0.8;
	}

