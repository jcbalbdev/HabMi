---
interface Props {
  title:string;
  puno:string;
  pdos:string;
  ptres:string;
  textBagdeUno:string;
  textBagdeDos:string;
  gradient: string;
}
const {title,puno,pdos,ptres,textBagdeUno,textBagdeDos,gradient} = Astro.props;
import Imagen from './Imagen.astro';
import Bagde from './Bagde.astro';
--- 

<div class="content-section">

  <Imagen src='/imagen_fondo_f2f2f2.svg' alt='Persona usando un microscopio'/>

  <div class="text-container">
    <h2 class="section-title">{title}</h2>
    <p class="section-text">
      {puno}
    </p>
    <p class="section-text">
      {pdos}
    </p>
    <p class="section-text">
      {ptres}
    </p>
    <div class="suscribete">
      <Bagde text={textBagdeUno} gradient={gradient}/>
      <Bagde text={textBagdeDos} gradient={gradient}/>
    </div>
    
  </div>

<style>
  .suscribete{
    text-align: center;
    padding:1rem;
  }
/* Contenedor principal */
.content-section {
  display: grid;
  border-bottom: 1px solid var(--color-grey);
  grid-template-columns: 1fr 1fr; /* Dos columnas iguales en pantallas grandes */
  gap: 0; /* Sin espacio entre columnas */
  align-items: stretch; /* Estira los elementos en vertical */
  
  max-width: 2400px;
  

  box-sizing: border-box;
}

/* Contenedor de texto */
.text-container {
  padding: 20px; /* Agrega espaciado interno al texto */
  
  margin: 20px;
}

/* Contenedor de imagen */
.image-container {
  overflow: hidden;
}

.image-container img {
  width: 100%;
  height: 100%; /* Hace que la imagen llene toda la altura del contenedor */
  object-fit: cover; /* Ajusta la imagen sin distorsionarla */
}

/* Estilo del título */
.section-title {
  padding-top:1rem;
  font-size: 2rem;
  font-weight: 800;
  line-height: 1.2;
  margin-bottom: 1rem;
  text-align: center;

  color: var(--color-green) ;
  
  font-family: "Poppins", sans-serif;
}

/* Estilo del texto */
.section-text {
  font-size: 1rem;
  color: var(--color-dark);
  line-height: 1.6;
  margin-bottom: 15px;
  font-family: "Poppins", sans-serif;
  text-align: center;
}

/* Responsividad para pantallas pequeñas */
@media (max-width: 768px) {
  .content-section {
    grid-template-columns: 1fr; /* Cambia a una sola columna */
    text-align: center;
  }

  .image-container {
    order: -1; /* Mueve la imagen arriba del texto en pantallas pequeñas */
  }

  .text-container {
    order: 2;
  }

  .section-title {
    font-size: 1.5rem;
  }

  .section-text {
    font-size: 0.9rem;
  }
}


</style>